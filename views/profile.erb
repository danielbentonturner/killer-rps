<center>
	<h3><%= @user.username %></h3>
	<a href = '/startgame/<%=@user.user_id%>/2' class ='button'> Start <a>
	<a href = '/signout' class ='button'> logout <a>
</center>
<div class="row" data-equalizer>
	<div class="large-6 columns">
    	<ul class="pricing-table" data-equalizer-watch>
    		<center>
    			<h3>Current Games</h3>
    		</center>
    		<% @game_hash['in_progress'].each do |game|%>
    			<center><li><a class = 'button' href='/game/<%=game.game_id%>'> Game: <%=game.game_id%></a>
    			<%winner = RPS.dbi.get_winner_by_match_id(game,@match_hash[game.game_id])%>
    			Last match Winner: <%=winner%> </li></center>
    		<% end %>
   		</ul>    
   	</div>
   	<div class="large-6 columns">
    	<ul class="pricing-table" data-equalizer-watch>
          <center>
          <h3>Completed Games</h3>
        </center>
        <% @game_hash['complete'].each do |game|%>
        	<center><li><a class = 'button' href='/game/<%=game.game_id%>'> Game: <%=game.game_id%></a> 
        	<%winner = RPS.dbi.get_user_by_id(game.game_winner_id)%>
        	Winner: <%=winner%> </li></center>
        <% end %>
      	<li class="cta-button"><a class="button" href="/moo">Moo!</a></li>
    </ul>    
  </div>